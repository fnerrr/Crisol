    // Modal mejorado con manejo de eventos táctiles y de clic
    div(
        id="imageModal" 
        class="fixed inset-0 z-50 hidden bg-black bg-opacity-90 flex items-center justify-center p-4"
    )
        // Contenedor principal
        div(class="relative max-w-6xl w-full h-full flex flex-col items-center justify-center")
            
            // Botón de cerrar
            button(
                onclick="closeModal()"
                class="absolute top-4 right-4 md:top-10 md:right-10 text-white text-3xl md:text-4xl hover:text-gray-300 z-50 focus:outline-none bg-black bg-opacity-50 rounded-full w-10 h-10 flex items-center justify-center"
                aria-label="Cerrar imagen"
            ) &times;
            
            // Contenedor de imagen y flechas
            div(
                class="relative w-full h-full flex items-center justify-center"
                onclick="handleModalClick(event)"
            )
                // Flecha izquierda
                button(
                    onclick="navigateImage(-1); event.stopPropagation()"
                    class="absolute left-2 md:left-4 text-white text-3xl md:text-5xl z-40 hover:text-gray-300 focus:outline-none bg-black bg-opacity-50 rounded-full w-10 h-10 md:w-12 md:h-12 flex items-center justify-center"
                    aria-label="Imagen anterior"
                ) &larr;
                
                // Imagen
                img(
                    id="modalImage" 
                    class="max-w-full max-h-full object-contain cursor-pointer md:cursor-default" 
                    src="" 
                    alt="Imagen ampliada"
                    onclick="handleImageClick(event)"
                )
                
                // Flecha derecha
                button(
                    onclick="navigateImage(1); event.stopPropagation()"
                    class="absolute right-2 md:right-4 text-white text-3xl md:text-5xl z-40 hover:text-gray-300 focus:outline-none bg-black bg-opacity-50 rounded-full w-10 h-10 md:w-12 md:h-12 flex items-center justify-center"
                    aria-label="Siguiente imagen"
                ) &rarr;

    script.
        // Variables globales para el control de imágenes
        let currentImageIndex = 0;
        let imageGroups = {
            crisol: Array.from({length: 6}, (_, i) => `/img/crisol/crisol${i+1}.jpeg`),
            fnerrr: Array.from({length: 5}, (_, i) => `/img/fnerrr/fnerrr${i+1}.jpeg`)
        };
        let currentGroup = '';
        
        // Función para abrir el modal
        function openModal(src, group) {
            const modal = document.getElementById('imageModal');
            const modalImg = document.getElementById('modalImage');
            
            currentGroup = group || src.includes('crisol') ? 'crisol' : 'fnerrr';
            currentImageIndex = imageGroups[currentGroup].findIndex(img => src.includes(img.split('/').pop()));
            
            // Configurar la imagen
            modalImg.src = src;
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            
            // Bloquear scroll en móvil
            document.addEventListener('touchmove', preventScroll, { passive: false });
        }
        
        // Navegación entre imágenes
        function navigateImage(direction) {
            const images = imageGroups[currentGroup];
            currentImageIndex = (currentImageIndex + direction + images.length) % images.length;
            document.getElementById('modalImage').src = images[currentImageIndex];
        }
        
        // Función para cerrar el modal
        function closeModal() {
            const modal = document.getElementById('imageModal');
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';
            document.removeEventListener('touchmove', preventScroll);
        }
        
        // Manejo de clics en el modal
        function handleModalClick(event) {
            // Solo cerrar si se hace clic en el fondo (no en la imagen o flechas)
            if (event.target === event.currentTarget) {
                closeModal();
            }
        }
        
        // Manejo de clics en la imagen
        function handleImageClick(event) {
            // En móvil, cerrar al tocar la imagen
            if (window.innerWidth < 768) {
                closeModal();
            }
            event.stopPropagation();
        }
        
        // Prevenir el scroll en móviles
        function preventScroll(e) {
            e.preventDefault();
            return false;
        }
        
        // Cerrar con tecla ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
            // Navegación con teclado
            else if (e.key === 'ArrowLeft') {
                navigateImage(-1);
            }
            else if (e.key === 'ArrowRight') {
                navigateImage(1);
            }
        });

    // Estilos para las flechas y animaciones
    style.
        #imageModal {
            transition: opacity 0.3s ease;
            -webkit-tap-highlight-color: transparent;
        }
        .group-hover\:scale-110:hover {
            transform: scale(1.10);
        }
        #modalImage {
            touch-action: manipulation;
            transition: opacity 0.2s ease;
        }
        @media (max-width: 767px) {
            #modalImage {
                cursor: pointer;
            }
            /* Flechas más grandes en móvil */
            #imageModal button {
                transform: scale(1.3);
                opacity: 0.8;
            }
        }
        /* Efecto hover para desktop */
        @media (hover: hover) {
            #imageModal button:hover {
                opacity: 1;
                transform: scale(1.1);
            }
        }



